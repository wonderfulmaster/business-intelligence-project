	    <div class="col-sm-7">
	        <input type="password" id="signUpPass2" class="form-control" placeholder="Password" style="text-align: left; direction: ltr;"/>
        </div>
    </div>

    <div class="row" style="margin-top:10px;">
        <div class="alert alert-danger col-sm-offset-4 col-sm-4" id="signUpAlert" style="padding: 5px;"></div>
    </div>

